{% extends "base.jinja2" %}

{% block content %}
<div class="flex w-full flex-col">
  <div class="card bg-base-300 rounded-box grid h-12 place-items-center text-lg font-bold">
    Team Composition
  </div>
  <div class="overflow-auto">
    <div class="flex flex-col sm:flex-row justify-evenly ">
      {% for team_name in team_composition %}
      <ul class="list bg-base-100 rounded-box m-2 px-2 shadow-md">
        <li class="p-2 mb-2 bg-base-300 rounded-box shadow-md text-center text-wrap">{{team_name}}</li>
        {% for row in team_composition.get(team_name) %}
        <li class="list-row text-center text-wrap pb-1">{{ row.get("gender") + "-" + row.get("mf_age_category") + " : "
          + row.get("count")|string }}</li>
        {% endfor %}
        <li class="list-row text-center text-wrap pb-1">{{ "Total : " + team_composition_totals.get(team_name)|string }}
        </li>
      </ul>

      {% endfor %}
    </div>

  </div>
  <div class="card bg-base-300 rounded-box grid h-12 place-items-center text-lg font-bold">
    Team Members
  </div>
  <div class="overflow-auto">
    <div class="flex flex-col sm:flex-row justify-evenly ">
      {% include "partials/team_members_list.jinja2" %}
    </div>
  </div>
</div>
</div>
{% endblock content %}